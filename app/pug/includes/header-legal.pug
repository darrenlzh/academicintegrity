//- Header for files under legal

- var n = 0;
header
  .wrapper
    a(href="../")
      .logo: img(src="../img/ub-interlocking.png")
      .title Academic Integrity
.navwrapper
  .navbar
    .breadcrumbs!= breadcrumbs
    #navmenu
      while n < 4
        span
        - n++;
  nav#nav
    ul
      li(class={active: currentPage === 'home'})
        a(href="../"): span: i.material-icons home
      li(class={active: currentPage === 'policies'})
        a(href="../policies"): span Policies
      li(class={active: currentPage === 'integrity'})
        a(href="../integrity"): span About Integrity
      li(class={active: currentPage === 'violations'})
        a(href="../violations"): span Violations
      li(class={active: currentPage === 'faq'})
        a(href="../faq"): span FAQ
      li(class={active: currentPage === 'resources'})
        a(href="../resources"): span Resources
.banner(class=currentPage)
