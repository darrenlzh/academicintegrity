// Header for files under legal

- var n = 0;
header
  .wrapper
    a(href="../")
      .logo: img(src="../img/ub-interlocking.png")
      .title Academic Integrity
.navwrapper
  .navbar
    .breadcrumbs!= breadcrumbs
    #navmenu
      while n < 4
        span
        - n++;
  nav#nav
    ul
      li(class={active: currentPage === 'home'})
        span
        a(href="../") Home
      li(class={active: currentPage === 'policies'})
        span
        a(href="../policies") Policies
      li(class={active: currentPage === 'integrity'})
        span
        a(href="../integrity") About Integrity
      li(class={active: currentPage === 'faq'})
        span
        a(href="../faq") FAQ
      li(class={active: currentPage === 'resources'})
        span
        a(href="../resources") Resources
.banner(class=currentPage)
